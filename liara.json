{
  "platform": "php",
  "app": "shortener-link",
  "build": {
    "location": "iran",
    "type": "php",
    "config": {
      "php": "8.4",
      "composer": {
        "require": {
          "ext-pdo": "*",
          "ext-curl": "*",
          "ext-mbstring": "*",
          "ext-xml": "*",
          "ext-json": "*",
          "ext-openssl": "*",
          "ext-tokenizer": "*",
          "ext-zip": "*",
          "ext-gd": "*",
          "ext-fileinfo": "*",
          "ext-bcmath": "*"
        }
      }
    }
  },
  "deploy": {
    "type": "laravel",
    "config": {
      "php": "8.4",
      "webroot": "public",
      "commands": [
        "php artisan optimize:clear",
        "php artisan migrate --force",
        "php artisan storage:link",
        "php artisan config:cache",
        "php artisan route:cache",
        "php artisan view:cache",
        "php artisan event:cache"
      ],
      "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false"
      }
    }
  },
  "disks": [
    {
      "name": "storage",
      "localPath": "./storage/app",
      "serverPath": "/storage/app"
    },
    {
      "name": "framework",
      "localPath": "./storage/framework",
      "serverPath": "/storage/framework"
    }
  ]
}
