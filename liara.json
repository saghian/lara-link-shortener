{
  "platform": "php",
  "app": "shortener-link",
  "build": {
    "location": "iran"
  },
  "deploy": {
    "type": "laravel",
    "config": {
      "php": "8.3",
      "webroot": "public",
      "commands": [
        "composer install --no-dev --optimize-autoloader",
        "php artisan optimize:clear",
        "php artisan migrate --force",
        "php artisan storage:link",
        "php artisan config:cache",
        "php artisan route:cache",
        "php artisan view:cache"
      ]
    }
  },
  "disks": [
    {
      "name": "storage",
      "localPath": "./storage/app",
      "serverPath": "/storage/app"
    },
    {
      "name": "framework",
      "localPath": "./storage/framework",
      "serverPath": "/storage/framework"
    }
  ]
}
